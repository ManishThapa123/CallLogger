<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyAccount.QuickReplies.QuickRepliesFragment">

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_back_arrow"
    android:layout_marginTop="@dimen/dimens_16"
    android:background="@null"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="@dimen/dimens_20"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="@color/black"
    android:id="@+id/ibBack"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16"
        android:fontFamily="@font/poppins_medium"
        android:text="Quick Replies"
        android:id="@+id/quickReplyHeader"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dimens_4"
        android:textSize="@dimen/dimens_18"
        app:layout_constraintStart_toEndOf="@id/ibBack"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/purple"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/createNew"
        android:textSize="@dimen/dimens_14"
        android:layout_marginTop="@dimen/dimens_4"
        android:layout_marginEnd="@dimen/dimens_20"
        android:text="Create New"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/dimens_12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuickReplies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/dimens_20"
        android:paddingEnd="@dimen/dimens_20"
        tools:listitem="@layout/item_quick_reply"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/dimens_12"
        tools:itemCount="3"
        app:layout_constraintTop_toBottomOf="@+id/quickReplyHeader" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/pbProgress"/>

</androidx.constraintlayout.widget.ConstraintLayout>