<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.DashboardActivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/header_title"
        app:layout_constraintBottom_toBottomOf="@id/header_title"
        android:id="@+id/ibBack"
        android:layout_marginStart="@dimen/dimens_16"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_back_arrow"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20"
        android:fontFamily="@font/poppins_semibold"
        android:text="Analysis"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutSet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginBottom="@dimen/dimens_2"
            android:layout_weight="1"
            android:elevation="@dimen/dimens_20"
            app:cardCornerRadius="@dimen/dimens_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalWorkingHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="2"
                    tools:text="12 hrs" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/timer_image"
                    app:tint="@color/purple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_4"
                    android:layout_marginEnd="@dimen/dimens_16"
                    android:layout_marginBottom="@dimen/dimens_16"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:lines="2"
                    android:text="Total Working Hours"
                    android:textColor="@color/purple"
                    android:textSize="14sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginBottom="@dimen/dimens_2"
            android:layout_weight="1"
            android:elevation="@dimen/dimens_20"
            app:cardCornerRadius="@dimen/dimens_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalPhoneCalls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="12 calls" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/call_icon" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_4"
                    android:layout_marginEnd="@dimen/dimens_16"
                    android:layout_marginBottom="@dimen/dimens_16"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:lines="2"
                    android:text="Total Phone Calls"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutSet1">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginBottom="@dimen/dimens_2"
            android:layout_weight="1"
            android:elevation="@dimen/dimens_20"
            app:cardCornerRadius="@dimen/dimens_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/neverAttended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="20 calls" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/call_never_attented" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_4"
                    android:layout_marginEnd="@dimen/dimens_16"
                    android:layout_marginBottom="@dimen/dimens_16"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:lines="2"
                    android:text="Never Attended Calls"
                    android:textColor="#FF001E"
                    android:textSize="14sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginBottom="@dimen/dimens_2"
            android:layout_weight="1"
            android:elevation="@dimen/dimens_20"
            app:cardCornerRadius="@dimen/dimens_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notPickedUpByClient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="2 calls" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/call_never_picked_up"
                    app:tint="@color/Orangish" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_4"
                    android:layout_marginEnd="@dimen/dimens_16"
                    android:layout_marginBottom="@dimen/dimens_16"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:lines="2"
                    android:text="Not Pickup by Client"
                    android:textColor="@color/Orangish"
                    android:textSize="14sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSet3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_16"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutSet2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/dimens_16"
            android:layout_marginEnd="@dimen/dimens_16"
            android:layout_marginBottom="@dimen/dimens_2"
            android:layout_weight="1"
            android:elevation="@dimen/dimens_20"
            app:cardCornerRadius="@dimen/dimens_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topCaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="Manish Thapa" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/call_icon"
                    app:tint="#1167b1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_4"
                    android:layout_marginEnd="@dimen/dimens_16"
                    android:layout_marginBottom="@dimen/dimens_4"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Top Caller"
                    android:textColor="#1167b1"
                    android:textSize="14sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>