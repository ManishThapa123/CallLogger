<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/Orangish">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_icon"
            android:text="All" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabIncoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_received_icon"
            android:text="Incoming" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabOutgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_outgoing_icon"
            android:text="Outgoing" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabMissed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_missed_icon"
            android:text="Missed" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabRejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_not_interested"
            android:text="Rejected" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabNeverAttended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_never_attented"
            android:text="Never Attended" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabNotPickedUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/call_never_picked_up"
            android:text="Not Picked up by client" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>